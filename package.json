{
  "name": "action-releaser",
  "version": "1.0.0",
  "description": "GitHub Action to attach files to a release",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/action-releaser#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/action-releaser.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/action-releaser/issues"
  },
  "keywords": ["github", "actions", "release", "assets"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./*": {
      "require": "./dist/*"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "action.yml", "dist"],
  "scripts": {
    "build": "bun --bun build.ts",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "prepublishOnly": "bun --bun run build",
    "release": "bun run changelog && bunx bumpp package.json --all",
    "test": "bun test || exit 0",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.5.0"
  },
  "devDependencies": {
    "@stacksjs/docs": "^0.70.23",
    "@stacksjs/eslint-config": "^4.10.2-beta.3",
    "@types/bun": "^1.2.12",
    "bumpp": "^10.1.0",
    "bun-plugin-dtsx": "^0.21.12",
    "changelogen": "^0.6.1",
    "lint-staged": "^15.5.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "lint-staged": {
    "*.{js,ts}": "bunx --bun eslint . --fix"
  }
}
